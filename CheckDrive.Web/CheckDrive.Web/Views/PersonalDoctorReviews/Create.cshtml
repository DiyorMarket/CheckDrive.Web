@model CheckDrive.ApiContracts.DoctorReview.DoctorReviewDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}

<div class="row">
    <div class="col-md-4 offset-md-1">
        <h1>Create</h1>
        <h4>DoctorReview</h4>
        <hr class="w-50" />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHealthy" id="isHealthyCheckbox" /> @Html.DisplayNameFor(model => model.IsHealthy)
                </label>
            </div>
            <div class="form-group w-50" id="commentsGroup">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" id="commentsInput" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverId" class="control-label mt-2">Haydovchi</label>
                <select asp-for="DriverId" class="form-control border border-dark" asp-items="@ViewBag.Drivers"></select>
            </div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label mt-2">Shifokor</label>
                <select asp-for="DoctorId" class="form-control border border-dark" asp-items="@ViewBag.Doctors"></select>
            </div>
            <div class="form-group mt-3 w-50">
                <a asp-action="Index" class="btn btn-outline-info">
                    <i class="fa-solid fa-arrow-left-long"></i> Back
                </a>
                <button class="btn btn-outline-success">
                    <i class="fa fa-plus"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const isHealthyCheckbox = document.getElementById("isHealthyCheckbox");
        const commentsGroup = document.getElementById("commentsGroup");

        isHealthyCheckbox.addEventListener("change", function () {
            if (this.checked) {
                commentsGroup.style.display = "none";
            } else {
                commentsGroup.style.display = "block";
            }
        });
    });
</script>
