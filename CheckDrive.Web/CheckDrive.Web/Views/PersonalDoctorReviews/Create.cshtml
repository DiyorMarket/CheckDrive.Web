@model CheckDrive.ApiContracts.DoctorReview.DoctorReviewForCreateDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
    var todayDate = DateTime.Today.ToString("yyyy-MM-dd");
}

<div class="row mt-custom">
    <div class="col-md-4 offset-md-1 mt-5">
        <h4>Ro`yxatga olish</h4>
        <hr class="w-50" />
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-check form-switch">
                <input asp-for="IsHealthy" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label asp-for="IsHealthy" class="form-check-label" for="flexSwitchCheckDefault">@Html.DisplayNameFor(model => model.IsHealthy)</label>
            </div>
            <div class="form-group w-50">
                <label class="control-label mt-2">Haydovchi</label>
                <select class="form-control border border-dark" disabled>
                    <option value="@ViewBag.SelectedDriverId" selected="selected">@ViewBag.SelectedDriverName</option>
                </select>
                <input type="hidden" asp-for="DriverId" value="@ViewBag.SelectedDriverId" />
            </div>
            <div class="form-group w-50">
                <label asp-for="DoctorId" class="control-label mt-2">Shifokor</label>
                <select asp-for="DoctorId" class="form-control border border-dark" asp-items="@ViewBag.Doctors"></select>
            </div>
            <div class="form-group w-50">
                <label asp-for="Comments" for="exampleFormControlTextarea1">Izoh</label>
                <textarea asp-for="Comments" class="form-control" rows="4"></textarea>
            </div>
            <div class="form-group w-50">
                <label asp-for="Date" class="control-label">Sana</label>
                <input asp-for="Date" class="form-control" type="date" value="@todayDate" />
            </div>
            <div class="form-group mt-3 w-50">
                <a asp-action="Index" class="btn btn-outline-info">
                    <i class="fa-solid fa-arrow-left-long"></i> Back
                </a>
                <button class="btn btn-outline-success" type="submit">
                    <i class="fa fa-plus"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>
