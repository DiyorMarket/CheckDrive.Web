@model CheckDrive.ApiContracts.OperatorReview.OperatorReviewDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}

<div class="row mt-custom">
    <div class="col-md-4 offset-md-1 mt-5">
        <h4>Ro`yxatga olish</h4>
        <hr class="w-50" />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group w-50">
                <label asp-for="DriverId" class="control-label mt-2">Haydovchi</label>
                <select asp-for="DriverId" class="form-control border border-dark" asp-items="@ViewBag.Drivers"></select>
            </div>
            <div class="form-group w-50">
                <label asp-for="CarId" class="control-label mt-2">Moshina</label>
                <select asp-for="CarId" class="form-control border border-dark" asp-items="@ViewBag.Cars"></select>
            </div>
            <div class="form-group w-50">
                <label asp-for="OilAmount" class="control-label"></label>
                <input asp-for="OilAmount" class="form-control" />
                <span asp-validation-for="OilAmount" class="text-danger"></span>
            </div>
            <div class="form-group w-50">
                <label asp-for="OilMarks" class="control-label mt-2">Yoqilg`i Markasi</label>
                <select asp-for="OilMarks" class="form-control border border-dark" asp-items="@ViewBag.OilMarks"></select>
            </div>
            <div class="form-group mt-3 w-50">
                <a asp-action="Index" class="btn btn-outline-info">
                    <i class="fa-solid fa-arrow-left-long"></i> Back
                </a>
                <button class="btn btn-outline-success">
                    <i class="fa fa-plus"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

