@using CheckDrive.Web.ViewModels.Employee
@model EmployeeViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutForModal.cshtml";
}

<h1 class="text-center text-danger"><i class="fa fa-exclamation-circle" style="font-size:100px"></i></h1>
<h4 style="color:grey;" class="text-center">
    @Model.FirstName @Model.LastName ni o'chirishni tasdiqlaysizmi?
</h4>
<h5>Bu amal ishchi ishtirok etgan barcha ma'lumotlar o'chiradi!</h5>
<div>
    <hr />
    <form asp-action="Delete" asp-controller="Employees" asp-route-parameters="@Model.Id">
        <div class="d-flex justify-content-center mt-5 m-2" style="gap: 10px;">
            <button asp-action="Index" class="btn btn-secondary" style="width:120px">
                Yo'q
            </button>
            <button asp-route-id="@Model.Id" class="btn btn-danger" style="width:120px">
                Ha
            </button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
