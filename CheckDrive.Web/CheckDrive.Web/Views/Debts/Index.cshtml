@model CheckDrive.ApiContracts.Debts.DebtsDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <form method="get" action="@Url.Action("Index", "Debts")">
        <div class="col-md-4">
            <div class="input-group">
                <input type="text" class="form-control rounded-left" placeholder="Haydovchilarni izlash..." name="searchString" value="@ViewBag.SearchString">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-search"></i> Qidirish
                    </button>
                </div>
            </div>
        </div>
    </form>
    <div class="table-responsive mt-3">
        <table class="table table-bordered table-striped table-hover paper-shadow">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Haydovchi F.I.</th>
                    <th>Mashina</th>
                    <th>Qarz Miqdori</th>
                    <th>Sana</th>
                    <th>Holati</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var debt in ViewBag.Debts)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", "Debts", new { id = debt.Id })">
                                @debt.Id
                            </a>
                        </td>
                        <td>@debt.DriverName</td>
                        <td>@debt.CarName</td>
                        <td>@debt.OilAmount</td>
                        <td>@debt.Date</td>
                        <td>
                            @if (debt.Status.ToString() == "Completed")
                            {
                                <span class="badge bg-success">Yopildi</span>
                            }
                            else if (debt.Status.ToString() == "Debts")
                            {
                                <span class="badge bg-danger">Yopilmadi</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="d-flex justify-content-between align-items-center my-3">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (ViewBag.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = 1 })" aria-label="First">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage - 1 })">@(@ViewBag.CurrentPage - 1)</a>
                </li>
            }
            @if (ViewBag.HasNextPage)
            {
                <li class="page-item active">
                    <span class="page-link">@ViewBag.CurrentPage</span>
                </li>
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage + 1 })">@(@ViewBag.CurrentPage + 1)</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = ViewBag.PageCount })" aria-label="Last">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
    <div class="p-2">
        <p class="h6 mb-0">@ViewBag.PageCount sahifadan @ViewBag.CurrentPage tasi  ( umumiy qarzlar soni: @ViewBag.TotalCount)</p>
    </div>
</div>

<script id="template" type="text/x-template">
    <div>
        <a rel='nofollow' href="cars/Details/${Id}">${Id}</a>
    </div>
</script>



<style>
    .badge {
        font-size: 0.8rem;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .bg-success {
        background-color: #28a745;
    }

    .bg-danger {
        background-color: #dc3545;
    }

    .container {
        margin-top: 30px;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #dee2e6;
        }

    .paper-shadow {
        background: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .pagination {   
        justify-content: flex-end;
    }

    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .pagination .page-link {
        margin-left: 5px;
    }

    .pagination .page-item.shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .font-weight-normal {
        font-weight: normal;
    }
</style>