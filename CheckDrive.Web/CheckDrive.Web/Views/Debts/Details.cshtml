@model CheckDrive.ApiContracts.Debts.DebtsDto
@using CheckDrive.ApiContracts
@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Qarz haqida ma`lumot</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Haydovchi F.I.SH:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DriverName)
        </dd>
        <dt class="col-sm-2">
            Mashina:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarName)
        </dd>
        <dt class="col-sm-2">
            Qarz miqdori (L):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OilAmount)
        </dd>
        <dt class="col-sm-2">
            Holati:
        </dt>
        <dd class="col-sm-10">
            @{
                string statusUzbek = Model.Status switch
                {
                    StatusForDto.Debts => "Yopilmagan",
                    StatusForDto.Completed => "Yopilgan",
                    _ => "Noma'lum"
                };
            }
            @statusUzbek
        </dd>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-info">
        <i class="fa-solid fa-arrow-left"></i>
        Orqaga
    </a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning">
        <i class="fa-solid fa-pen"></i>
        Tahrirlash
    </a>
</div>
