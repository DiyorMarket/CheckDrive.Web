@model CheckDrive.ApiContracts.MechanicAcceptance.MechanicAcceptanceDto

@{
    ViewData["Title"] = "Mechanic Acceptances(Personal)";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}

<h1 style="margin-left:180px">Mexanik(Qabul qiluvchi) oynasi</h1>

<div class="col-12 text-end mb-2">
    <a class="btn btn-success" asp-action="create" style="margin-right:180px">
        <i class="fa fa-plus"></i> Create
    </a>
</div>

<div class="row">
    <div class="col-12 text-center">
        <ejs-grid id="mechanicAcceptances-list" dataSource="@ViewBag.MechanicAcceptances" gridLines="Vertical" allowSorting="true" style="margin: 0 auto;">
            <e-grid-columns>
                <e-grid-column headerText="Mexanik F.I." field="MechanicName" textAlign="Center" typeof="text" class="customcss" width="20%"></e-grid-column>
                <e-grid-column headerText="Haydovchi F.I." field="DriverName" textAlign="Center" typeof="text" class="customcss" width="20%"></e-grid-column>
                <e-grid-column headerText="Qabul qilish" field="IsAccepted" textAlign="Center" width="20%"></e-grid-column>
                <e-grid-column headerText="Sabab" field="Comments" textAlign="Center" typeof="text" class="customcss" width="40%"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>

<div class="d-flex justify-content-end align-items-center my-3" style="margin-right: 180px;">
    <nav aria-label="Page navigation">
        <ul class="pagination mb-0">
            @if (ViewBag.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("PersonalIndex", new { pageNumber = 1 })" aria-label="First">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("PersonalIndex", new { pageNumber = ViewBag.CurrentPage - 1 })">@(@ViewBag.CurrentPage - 1)</a>
                </li>
            }

            <li class="page-item active">
                <span class="page-link">@ViewBag.CurrentPage</span>
            </li>

            @if (ViewBag.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("PersonalIndex", new { pageNumber = ViewBag.CurrentPage + 1 })">@(@ViewBag.CurrentPage + 1)</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("PersonalIndex", new { pageNumber = ViewBag.PageCount })" aria-label="Last">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
    <div class="p-2">
        <p class="h6 mb-0">@ViewBag.CurrentPage of @ViewBag.PageCount pages (@ViewBag.TotalCount items)</p>
    </div>
</div>

<style>
    #mechanicAcceptances-list {
        width: 80% !important;
    }

        #mechanicAcceptances-list .e-gridheader,
        #mechanicAcceptances-list .e-gridcontent {
            width: 100% !important;
        }

            #mechanicAcceptances-list .e-gridheader th,
            #mechanicAcceptances-list .e-gridcontent td {
                width: auto !important;
                white-space: nowrap;
            }
</style>
