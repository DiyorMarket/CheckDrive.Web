@model CheckDrive.ApiContracts.DoctorReview.DoctorReviewDto

@{
    ViewData["Title"] = "Delete";
}

<h1 class="align-items-baseline" style="margin-top: 100px">O'chirish</h1>
<hr />

<h3 style="color:grey;">
    Haqiqatan ham buni oʻchirib tashlamoqchimisiz?
    O'chirsangiz bu ma`lumotni qayta tiklay olmaysiz!!!
</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Haydovchi F.I.:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DriverName)
        </dd>
        <dt class="col-sm-2">
            Shifokor F.I.:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoctorName)
        </dd>
        <dt class="col-sm-2">
            Sog`lig`i:
        </dt>
        <dd class="col-sm-10">
            @(Model.IsHealthy.HasValue ? (Model.IsHealthy.Value ? "Sog`lom" : "Kasal") : "N/A")
        </dd>
        <dt class="col-sm-2">
            Izoh:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comments)
        </dd>
        <dt class="col-sm-2">
            Sana:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-group">
            <a asp-action="Index" class="btn btn-outline-info">
                <i class="fa-solid fa-arrow-left-long"></i>
                Orqaga
            </a>
            <button asp-route-itemid="@Model.Id" class="btn btn-outline-danger">
                <i class="fa-solid fa-trash"></i>
                O'chirish
            </button>
        </div>
    </form>
</div>
